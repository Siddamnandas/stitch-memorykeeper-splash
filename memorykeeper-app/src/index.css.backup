@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --background-light: #fefdfc;
  --background-dark: #1a1a1a;
  --primary: #FF8C00;
  --primary-dark: #e67e00;
}

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: var(--background-light);
  color: #333;
}

* {
  box-sizing: border-box;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
    monospace;
}

.material-symbols-outlined {
  font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
}

.score-flower {
  position: relative;
  width: 48px;
  height: 48px;
}

.score-flower svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.score-flower-bg {
  color: #EADFD5;
}

.dark .score-flower-bg {
  color: #382C22;
}

.score-flower-fg {
  color: #ee862b;
  stroke-dasharray: 283;
  stroke-dashoffset: 141.5;
  transform-origin: center;
  transform: rotate(-90deg);
  transition: stroke-dashoffset 0.5s ease-in-out;
}

@keyframes shimmer {
  0% {
    background-position: -1000px 0;
  }
  100% {
    background-position: 1000px 0;
  }
}

.animate-shimmer {
  animation: shimmer 3s infinite linear;
  background: linear-gradient(to right, #ffffff00 20%, #ffffff80 50%, #ffffff00 80%);
  background-size: 1000px 100%;
}

@keyframes flip {
  0% {
    transform: rotateY(0deg);
  }
  100% {
    transform: rotateY(180deg);
  }
}

@keyframes flip-back {
  0% {
    transform: rotateY(180deg);
  }
  100% {
    transform: rotateY(0deg);
  }
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-5px);
  }
  50% {
    transform: translateX(5px);
  }
  75% {
    transform: translateX(-5px);
  }
}

@keyframes burst {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.5;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes gentlePulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(238, 134, 43, 0.4);
  }
  70% {
    transform: scale(1.05);
    box-shadow: 0 0 0 10px rgba(238, 134, 43, 0);
  }
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.card {
  perspective: 1000px;
}

.card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}

.card.flipped .card-inner {
  transform: rotateY(180deg);
}

.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

.card-back {
  transform: rotateY(180deg);
}

.card.matched .card-inner {
  animation: burst 0.5s ease-in-out;
  box-shadow: 0 0 15px 5px rgba(238, 134, 43, 0.7);
}

.card.mismatch .card-inner {
  animation: shake 0.4s ease-in-out;
  border: 2px solid #ef4444;
}

.no-scrollbar::-webkit-scrollbar {
  display: none;
}

.no-scrollbar {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.writing-mode-vertical {
  writing-mode: vertical-rl;
  transform: rotate(180deg);
}

.sepia {
  filter: sepia(100%);
}

.animate-delay-1 {
  animation-delay: 0.2s;
}

.animate-delay-2 {
  animation-delay: 0.4s;
}

.animate-delay-3 {
  animation-delay: 0.6s;
}

.animate-delay-4 {
  animation-delay: 0.8s;
}

.animate-delay-5 {
  animation-delay: 1s;
}

.checked-animation {
  animation: pop 0.3s ease-out;
}

@keyframes pop {
  0% {
    transform: scale(0.95);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 0 5px rgba(238, 134, 43, 0);
  }
  50% {
    box-shadow: 0 0 20px rgba(238, 134, 43, 0.7);
  }
}

@keyframes redFlash {
  0%, 100% {
    border-color: transparent;
  }
  50% {
    border-color: red;
  }
}

.era-bucket-empty {
  border-style: dashed;
}

.dragging {
  transform: scale(1.05);
  box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  opacity: 0.8;
  cursor: grabbing;
}

.snap-in {
  animation: glow 1s ease-in-out;
}

.incorrect-placement {
  animation: red-flash 0.5s ease-in-out;
  border-width: 2px;
}