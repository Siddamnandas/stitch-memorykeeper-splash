# Supabase Configuration (required for production features)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_ENABLE_SUPABASE=true

# Server-side secrets (set in Vercel/Cloudflare environment, not in client)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_PROXY_URL=https://your-app-domain.com/api/ai

# Environment & Monitoring
NODE_ENV=development
VITE_APP_ENV=development
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
VITE_APP_RELEASE=v1.0.0

# Analytics & Consent
POSTHOG_KEY=your_posthog_project_key
POSTHOG_API_HOST=https://app.posthog.com
VITE_ENABLE_ANALYTICS_CONSENT=false

# Application Configuration
VITE_APP_NAME=MemoryKeeper
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_AI_STUDIO=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_VOICE_INPUT=true

# Payments & Monetization (Stripe)
VITE_ENABLE_PAYMENTS=false
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Push Notifications & PWA
VAPID_SUBJECT=mailto:contact@memorykeeper.app
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
